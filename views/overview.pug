extends base

block content
    main.main
        .card-container
            each product in products
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/products/${product.imageCover}`, alt=`${product.name}`)
                        h3.heading-tertirary
                            span= product.name

                    .card__details
                        h4.card__sub-heading #{product.difficulty} #{product.duration}-day product
                        p.card__text #{product.summary}
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span #{product.startLocation.description}
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-calendar')
                            span #{product.startDates[0].toLocaleString('en-us' ,{month:'long', year:'numeric'})}
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-flag')
                            span #{product.locations.length} stops
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-user')
                            span #{product.maxGroupSize} people

                    .card__footer
                        p
                            span.card__footer-value $#{product.price}
                            | 
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value #{product.ratingAverage}
                            | 
                            span.card__footer-text rating (#{product.ratingQuantity})
                        a.btn.btn--green.btn--small(href=`/product/${product.slug}`) Details